<!DOCTYPE html>
<html lang="en">
<head>
  <title>Students</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<nav class="navbar navbar-dark bg-dark mb-4">
  <div class="container">
    <a class="navbar-brand" href="/">Student Management</a>
    <a href="/add" class="btn btn-success">Add Student</a>
  </div>
</nav>

<div class="container">
  <div class="card shadow">
    <div class="card-header bg-primary text-white">
      <h4 class="m-0">All Students</h4>
    </div>

    <div class="card-body">
      <table class="table table-bordered table-striped text-center align-middle">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Course</th>
            <th>Batch</th>
            <th>Joining</th>
            <th>Remarks</th>
            <th>Actions</th>
          </tr>
        </thead>

        <tbody>
          <% students.forEach(s => { %>
          <tr>
            <td><%= s.name %></td>
            <td><%= s.email %></td>
            <td><%= s.contactNumber %></td>
            <td><%= s.course %></td>
            <td><%= s.batchCode %></td>
            <td><%= s.joiningDate %></td>
            <td><%= s.remarks %></td>

            <td>
              <a href="/edit/<%= s._id %>" class="btn btn-warning btn-sm">Edit</a>
              <a href="/delete/<%= s._id %>" class="btn btn-danger btn-sm"
                 onclick="return confirm('Are you sure?')">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>

      </table>
    </div>
  </div>
</div>

</body>
</html>
